<config>
    <global>
        <logfileRootDir>TestResults</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <email>
            <recipients>
                <to>myboss@mycompany.com</to>
                <to>myself@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>LIS_Network_tests_run_on_2012R2</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>
    </global>

    <testSuites>
        <suite>
            <suiteName>Gcov_collect</suiteName>
            <suiteTests>
                <suiteTest>Collect</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>

    <testCases>
        <test>
            <testName>Collect</testName>
            <testParams>
                <param>TC_COVERED=Collect</param>
            </testParams>
            <testScript>dummy.sh</testScript>
            <files>remote-scripts/ica/dummy.sh,remote-scripts/ica/utils.sh,remote-scripts/ica/collect_gcov_data.sh</files>
            <uploadFiles>
            <file>gcov_data.zip</file>
            </uploadFiles>
            <noReboot>True</noReboot>
            <timeout>300</timeout>
        </test>

    </testCases>

    <VMs>
        <vm>
         <hvServer>localhost</hvServer>
         <vmName>centos_3</vmName>
         <os>Linux</os>
         <ipv4>192.168.126.122</ipv4>
         <sshKey>rhel5_id_rsa.ppk</sshKey>
        <suite>Gcov_collect</suite>
        </vm>
    </VMs>
</config>

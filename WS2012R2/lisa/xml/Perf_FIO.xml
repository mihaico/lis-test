<?xml version="1.0" encoding="utf-8"?>

<config>
    <global>
        <logfileRootDir>TestResults</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <LisaInitScript>
            <file>.\setupScripts\CreateVMs.ps1</file>
        </LisaInitScript>
        <email>
            <recipients>
                <to>myself@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>LIS Performance Test Results</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>
        <imageStoreDir>path/to/vhdx</imageStoreDir>
    </global>

    <testSuites>
        <suite>
            <suiteName>FIO</suiteName>
            <suiteTests>
                <suiteTest>Performance_FIO-8k</suiteTest>
                <suiteTest>Performance_FIO-1M</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>

    <testCases>
         <test>
            <testName>Performance_FIO-8k</testName>
            <testScript>Performance_FIO.sh</testScript>
            <files>remote-scripts/ica/Performance_FIO.sh,remote-scripts/ica/perf_utils.sh,tools/fio-2.1.10.tar.gz,tools/fio_8k.fio</files>
            <setupScript>
                <file>setupScripts\Check_PowerPlan.ps1</file>
                <file>setupScripts\AddHardDisk.ps1</file>
            </setupScript>
            <cleanupScript>SetupScripts\RemoveHardDisk.ps1</cleanupScript>
            <timeout>5400</timeout>
            <testParams>  
                <param>TC_COVERED=FIO</param>
                <!-- Modify with physical disk  number -->
                <param>PHYSICAL_NUMBER=3</param>
            	<param>SCSI=0,0,Physical</param>
                <param>LOG_FOLDER=fio_logs_8k</param>
                <param>FIO_SCENARIO_FILE=fio_8k.fio</param>
            </testParams>
            <uploadFiles>
                <file>fio_logs_8k.zip</file>
            </uploadFiles>
            <onError>Continue</onError>
            <noReboot>False</noReboot>
        </test>

        <test>
            <testName>Performance_FIO-1M</testName>
            <testScript>Performance_FIO.sh</testScript>
            <files>remote-scripts/ica/Performance_FIO.sh,remote-scripts/ica/perf_utils.sh,tools/fio-2.1.10.tar.gz,tools/fio_1M.fio</files>
            <setupScript>
                <file>setupScripts\Check_PowerPlan.ps1</file>
                <file>setupScripts\AddHardDisk.ps1</file>
            </setupScript>
            <cleanupScript>SetupScripts\RemoveHardDisk.ps1</cleanupScript>
            <timeout>5400</timeout>
            <testParams>
                <param>TC_COVERED=FIO</param>
                <!-- Modify with physical disk  number -->
                <param>PHYSICAL_NUMBER=3</param>
                <param>SCSI=0,0,Physical</param>
                <param>LOG_FOLDER=fio_logs_1M</param>
                <param>FIO_SCENARIO_FILE=fio_1M.fio</param>
            </testParams>
            <uploadFiles>
                <file>fio_logs_1M.zip</file>
            </uploadFiles>
            <onError>Continue</onError>
            <noReboot>False</noReboot>
        </test>
    </testCases>
    
    <VMs>
        <vm>
            <hvServer>hostname</hvServer>
            <vmName>VM-Under-Test</vmName>
            <os>Linux</os>
            <ipv4></ipv4>
            <sshKey>rhel5_id_rsa.ppk</sshKey>
            <hardware>
               <generation>1</generation>
               <create>true</create>
               <numCPUs>8</numCPUs>
               <memSize>8192</memSize>
               <disableDiff>True</disableDiff>
               <nic>VMBus,Vm.Enterprise#1</nic>
            </hardware>
            <testParams>
                <param>TEST_DEVICE=/dev/sdb</param>
                <param>FILE_NAME=fio-2.1.10.tar.gz</param>
                <param>FS=ext4</param>
            </testParams>
            <suite>FIO</suite>
        </vm>
    </VMs>
</config>
